{# templates/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-column mx-auto" style="width: 300px;">
        <h1 class="text-success fw-light text-center mt-5">Iniciar Sesión</h1>
        <div class="text-danger" style="height: 80px;">
            {% if error %}
                <p>{{error.messageKey|trans(error.messageData, 'security')}}</p>
            {% endif %}
        </div>
        <form class="d-flex flex-column align-items-center" action="{{ path('app_login') }}" method="post">
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"/>

            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="_password"/>

            <input type="hidden" name="inicio" value="/"/>

            <input type="submit" class="mt-3 w-50 btn btn-outline-success" value="Entrar"/>
        </form>
        <div class="text-center mt-3">
            <a href="{{ path('app_inicio') }}">Volver al inicio</a> / <a href="{{ path('app_registro') }}">Registrarse</a>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <footer class="fixed-bottom p-4 d-flex justify-content-between align-items-end">
        <a href="{{ path('app_inicio') }}">
            <img src="{{ asset('img/logo2.png') }}" height="50px" alt="Veredeportes">
        </a>
        <small class="fw-light fst-italic text-secondary">Pagina creada por Alejandro Romero Pino ©</small>
    </footer>
{% endblock %}