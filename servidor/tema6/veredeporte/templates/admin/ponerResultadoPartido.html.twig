{% extends 'admin/administracion.html.twig' %}

{% block title %}Veredeporte - Administraci√≥n{% endblock %}

{% block main %}

        <h1 class="text-success">Partidos</h1>
        <div class="card">
            {% if partidos %}
                {% for partido in partidos %} 
                <form method="post" action="{{ path('app_insertar_resultado',{id: partido.id}) }}" class="d-flex flex-nowrap text-center align-items-center justify-content-between p-1">
                    <div class="d-flex flex-column">
                        <p>{{ partido.local.nombre }}</p>
                        <input type="number" name="inputLocal" min="0" value="0">
                    </div>
                    <span>-</span>
                    <div class="d-flex flex-column">
                        <p>{{ partido.visitante.nombre }}</p>
                        <input type="number" name="inputVisitante" min="0" value="0">
                    </div>
                    <input type="submit" name="submit" class="btn btn-outline-success" value="insertar">
                </form>
                <hr class="my-0">
                {% endfor %}
            {% endif %}
        </div>

{% endblock %}