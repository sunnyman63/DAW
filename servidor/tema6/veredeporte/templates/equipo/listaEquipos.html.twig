{% extends 'equipo/equipo.html.twig' %}

{% block title %}Veredeporte - Equipo{% endblock %}

{% block main %}
    <h3>Listado de equipos</h3>
    <div class="mt-3 d-flex flex-column card" style="min-height: 100px;">
        {% if equipos %}
            {% for equipo in equipos %}
                <div class="px-2 pt-2 d-flex align-items-center flex-wrap">
                    {% set ruta = "img/bola" ~ equipo.tipo ~ "3.png" %}
                    <img src="{{ asset( ruta ) }}" width="50px">
                    <div>
                        <span class="ms-3 h4 text-capitalize">{{ equipo.nombre }}</span>
                        <span class="text-secondary small text-uppercase">{{ equipo.tipo }}</span>
                    </div>
                    <div class="ms-auto">
                        {% if equipo in solicitudes %}
                            <a class="btn btn-outline-success disabled" href="{{ path('app_solicitar_unirse',{id: equipo.id}) }}">Solicitar Unirse</a>
                        {% else %}
                            <a class="btn btn-outline-success" href="{{ path('app_solicitar_unirse',{id: equipo.id}) }}">Solicitar Unirse</a>
                        {% endif %}
                    </div>
                    <hr class="my-2 mb-0 w-100">
                </div>
            {% endfor %}
        {% else %}
            <h5 class="fw-bold ms-3 mt-3">!Vaya...</h5>
            <p class="mb-0 ms-3">Parece que no existen equipos...</p>
        {% endif %}
    </div>

{% endblock %}