{% extends 'equipo/equipo.html.twig' %}

{% block title %}Veredeporte - Crear Equipos{% endblock %}

{% block main %}

    <div class="row">
        <div class="col-sm-8 col-md-6 m-auto">
            <h1 class="text-success">Crea tu propio equipo!!</h1>

            {{ form_start(form , {'attr': {'class':'d-flex flex-column'}}) }}
        
                {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nombre, {'attr': {'class':'form-control'}}) }}
                <div class="d-flex align-items-center mt-2">
                    {{ form_label(form.tipo, null, {'label_attr': {'class': 'form-label me-3'}}) }}
                    <div class="flex-fill">
                        {{ form_widget(form.tipo, {'attr': {'class':'form-select'}}) }}
                    </div>
                </div>
                
                {{ form_widget(form.guardar , {'attr': {'class':'mt-3 btn btn-outline-success'}}) }}
        
            {{ form_end(form) }}
        </div>
    </div>
    

{% endblock %}